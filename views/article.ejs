<%- include('partials/header.ejs') -%>
<%- include('partials/navbar.ejs') -%>

<body>
    <div class="container mt-3">
        <% articles.forEach( articles => {%>
        <br>
        <div class="card">
            <div class="card-header">
                <h2><%= articles.title %></h2>
                <button class="btn btn-primary mt-4" type="button" data-toggle="collapse"
                    data-target="#id<%= articles.id %>"
                >Ler artigo</button>
            </div>
            
            <div class="collapse" id="id<%= articles.id %>">
                <div class="card card-body">
                    <%- articles.body %>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</body>

<%- include('partials/footer.ejs') -%>